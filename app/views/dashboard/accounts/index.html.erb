<h1 class="app-page-title"><%= t ("account.title_account") %></h1>
<hr class="mb-4">
<div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
  <div class="d-grid gap-2 d-md-flex justify-content-md-end pb-2">
    <%= link_to new_dashboard_account_path, remote: true, class:"btn app-btn-primary theme-btn me-md-2", data: {bs_toggle:"modal", bs_target:"#modal" } do %>
      <%= icon("plus-square") %> <%= t ("buttons_default.add") %>
    <% end %>
  </div>
  <div class="app-card app-card-orders-table shadow-sm mb-5">
    <div class="app-card-body">
      <div class="table-responsive">
        <table class="table app-table-hover mb-0 text-left">
          <thead>
            <tr class="text-center">
              <th style="width:25%" class="cell"><%= t ("account.id") %></th>
              <th style="width:15%" class="cell"><%= t ("account.agency") %></th>
              <th style="width:15%" class="cell"><%= t ("account.account") %></th>
              <th style="width:15%" class="cell"><%= t ("account.balance") %></th>
              <th style="width:10%" class="cell"><%= t ("account.account_type") %></th>
              <th style="width:10%" class="cell"><%= t ("account.status") %></th>
              <th style="width:10%" class="cell"><%= t ("account.action") %></th>
            </tr>
          </thead>
          <tbody>
            <% @accounts.each do |account| %>
              <tr class="text-center">
                <td class="cell"><%= account&.id %></td>
                <td class="cell"><%= account&.agency %></td>
                <td class="cell"><%= account&.account %></td>
                <td class="cell"><%= account&.balance %></td>
                <td class="cell"><%= account&.account_type %></td>
                <td class="cell"><%= account&.active? ? '✅' : '❌' %></td>
                <td class="cell">
                  <%= link_to edit_dashboard_account_path(account), remote: true, class:"btn app-btn-primary theme-btn mx-auto", data: {bs_toggle:"modal", bs_target:"#modal"} do %>
                    <%= icon("pencil-square") %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!--//table-responsive-->
    </div>
    <!--//app-card-body-->
  </div>
  <!--//app-card-->
</div>
<!--//tab-pane-->