<section class="app app-signup p-0">
  <div class="row g-0 app-auth-wrapper">
    <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5 my-auto">
      <div class="d-flex flex-column align-content-end">
        <div class="app-auth-body mx-auto">
          <div class="app-auth-branding mb-4">
            <%= link_to root_path, class: "app-logo" do %>
              <%= image_tag "logo.png", class: "logo-icon me-2 img-fluid rounded", alt: "logo" %>
            <% end %>
          </div>
          <h2 class="auth-heading text-center mb-4">Sign up to <%= t ("default.site_title") %></h2>
          <div class="auth-form-container text-start mx-auto">
            <%= form_for(resource, as: resource_name, html: { class: "auth-form auth-signup-form" }, url: registration_path(resource_name)) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
              <div class="mb-3">
                <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "#{t("default.first_name")}", required: true %>
              </div>
              <div class="mb-3">
                <%= f.text_field :last_name, class: "form-control", placeholder: "#{t("default.last_name")}", required: true %>
              </div>
              <div class="mb-3">
                <%= f.email_field :email, class: "form-control", placeholder: "#{t("default.email")}", required: true %>
              </div>
              <div class="mb-3">
                <%= f.password_field :password, class: "form-control", placeholder: "#{t("default.password")} (#{@minimum_password_length} #{t("default.characters_minimum")})", required: true %>
                <small class="fw-lighter">(including 1 uppercase letter, 1 number, 1 special character)</small>
              </div>
              <div class="mb-3">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "#{t("default.password_confirmation")}", required: true %>
              </div>
              <div class="actions">
                <%= f.submit class: "btn app-btn-primary w-100 theme-btn mx-auto" %>
              </div>
            <% end %>
            <div class="auth-option text-center pt-5"><%= t ("default.acount_exists") %> <%= render "users/shared/links" %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
      <div class="auth-background-holder">
      </div>
      <div class="auth-background-mask"></div>
      <div class="auth-background-overlay p-3 p-lg-5">
        <div class="d-flex flex-column align-content-end h-100">
          <div class="h-100"></div>
          <div class="overlay-content p-3 p-lg-4 rounded">
            <h5 class="mb-3 overlay-title"><%= t ("default.title_description") %></h5>
            <div><%= t ("default.subtitle_description") %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>