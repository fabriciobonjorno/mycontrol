<section class="app app-login p-0">
  <div class="row g-0 app-auth-wrapper">
    <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5 my-auto">
      <div class="d-flex flex-column align-content-end">
        <div class="app-auth-body mx-auto">
          <div class="app-auth-branding mb-4">
            <%= link_to root_path, class: "app-logo" do %>
              <%= image_tag "logo.png", class: "logo-icon me-2 img-fluid rounded", alt: "logo" %>
            <% end %>
          </div>
          <h2 class="auth-heading text-center mb-5">Log in to <%= t ("default.site_title") %></h2>
          <div class="auth-form-container text-start">
            <%= form_for(resource, as: resource_name, html: { class: "auth-form login-form" }, url: session_path(resource_name)) do |f| %>
              <div class="email mb-3">
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "#{t("default.email")}", required: true %>
              </div>
              <div class="password mb-3">
                <%= f.password_field :password, class: "form-control", placeholder: "#{t("default.password")}", required: true %>
                <div class="extra mt-3 row justify-content-between">
                  <div class="col-6">
                    <% if devise_mapping.rememberable? %>
                      <div class="form-check">
                        <%= f.check_box :remember_me, class: "form-check-input", id: "RememberPassword" %>
                        <%= f.label :remember_me, class: "form-check-label", for: "RememberPassword" %>
                      </div>
                    <% end %>
                  </div>
                  <div class="col-6">
                    <div class="forgot-password text-end">
                      <% if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
                        <%= link_to "Forgot password?", new_password_path(resource_name) %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <%= f.submit "Log In", class: "btn app-btn-primary w-100 theme-btn mx-auto" %>
              </div>
            <% end %>
            <div class="auth-option text-center pt-5">
              <% if devise_mapping.registerable? && controller_name != "registrations" %>
                No Account? Sign up
                <%= link_to "here.", new_registration_path(resource_name) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
      <div class="auth-background-holder">
      </div>
      <div class="auth-background-mask"></div>
      <div class="auth-background-overlay p-3 p-lg-5">
        <div class="d-flex flex-column align-content-end h-100">
          <div class="h-100"></div>
          <div class="overlay-content p-3 p-lg-4 rounded">
            <h5 class="mb-3 overlay-title">
              <%= t ("default.title_description") %>
            </h5>
            <div><%= t ("default.subtitle_description") %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>